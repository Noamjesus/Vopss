<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vopss</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Vopss.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <h1>Vopss</h1>
        <nav>
            <div class="search-bar">

                <ul>
                    <li><a asp-page="/noti">Notificaciones</a></li>
                    <li><a asp-page="/ayudaa">Ayuda</a></li>
                    <li><a asp-page="/Categorias">Categoria</a></li>
                    <li><a asp-page="/inicioSesion">Inicio de sesion</a></li>
                    <li><a asp-page="/regisss">Registrarse</a></li>


                    <form>
                        <input type="text" placeholder="Buscar...">
                        <button type="submit"><i class="fa fa-search"></i></button>
                    </form>
                </ul>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br>

  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
    
    
</body>


</html>